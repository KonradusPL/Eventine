<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layout_splash</item>
    </style>
    <style name="MapTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="WhiteEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>



</resources>
